<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txTitulo"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="Costo total"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="39dp" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/Totale"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:gravity="center"
            android:hint="Total de equipos"
            android:ems="10"
            android:inputType="number" />


    </LinearLayout>

    <TextView
        android:id="@+id/txTitulo1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Escoge un procesador"
        android:textSize="30dp"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="39dp" />
    <RadioGroup
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_gravity="center">

        <RadioButton
            android:id="@+id/rbi3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Procesador I3"
            android:textSize="30dp"
            android:checked="true"
            />

        <RadioButton
            android:id="@+id/rbi5"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Procesador I5"
            android:textSize="30dp" />
        <RadioButton
            android:id="@+id/rbi7"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Procesador I7"
            android:textSize="30dp" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="306dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txmemoriaram"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Memoria Ram"
            android:textSize="30dp"
            tools:layout_editor_absoluteX="161dp"
            tools:layout_editor_absoluteY="39dp" />
        <EditText
            android:id="@+id/etmemoria"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:gravity="center"
            android:ems="12"
            android:hint="gb"
            android:inputType="number" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="Calcular"
        android:layout_gravity="center"
        android:onClick="calcular"/>



</LinearLayout>
